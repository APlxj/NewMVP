<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/i2g"
            android:enabled="false"
            android:focusable="false"
            android:onClick="scan" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_fuli"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/hwo"
            android:enabled="false"
            android:focusable="false"
            android:onClick="share" />

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/hx5"
            android:enabled="false"
            android:focusable="false"
            android:onClick="set" />
    </LinearLayout>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/goback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="goback">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/csx"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="refresh">

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ct1"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="finish"
            android:visibility="gone">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/coa"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goforward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="goforward">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/csz"
                android:enabled="false"
                android:focusable="false" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>